    "@types/react-dom": "^18.0.0",
    "@types/webpack": "^5.0.0",
    "css-loader": "^6.0.0",
    "html-webpack-plugin": "^5.0.0",
    "style-loader": "^3.0.0",
    "ts-loader": "^9.0.0",
    "typescript": "^5.0.0",
    "webpack": "^5.0.0",
